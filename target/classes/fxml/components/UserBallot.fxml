<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lamonzo.pbb.controller.UserBallotController"
      prefWidth="400" maxWidth="400"
      prefHeight="700" maxHeight="700">

    <!-- CONSTANTS -->
    <fx:define>
        <Double fx:id="leftMargin" fx:value="30.0"/>
    </fx:define>

    <HBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="section-heading">
            YOUR BALLOT
            <HBox.margin>
                <Insets top="20.0" bottom="10.0" left="$leftMargin"/>
            </HBox.margin>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <JFXListView fx:id="userBallotListView" VBox.vgrow="ALWAYS">
        <!-- SPACING THE LIST VIEW FROM THE SIDE OF THE APPLICATION -->
        <HBox>
            <Label>
                Lamonzo Arroyo
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Label>
            <Label styleClass="position-label">
                RB
                <HBox.margin>
                    <Insets top="1.0"/>
                </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <ImageView preserveRatio="true" fitHeight="20">
                <image>
                    <Image url="@../../img/teams/ATL-Logo.png" smooth="true"/>
                </image>
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </ImageView>
            <Label styleClass="team-label">
                ATL
            </Label>
        </HBox>

        <HBox>
            <Label>
                Katherine Wakefield
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Label>
            <Label styleClass="position-label">
                QB
                <HBox.margin>
                    <Insets top="1.0"/>
                </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <ImageView preserveRatio="true" fitHeight="20">
                <image>
                    <Image url="@../../img/teams/BAL-Logo.png"/>
                </image>
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </ImageView>
            <Label styleClass="team-label">
                BAL
            </Label>
        </HBox>

        <HBox>
            <Label>
                John Doe
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Label>
            <Label styleClass="position-label">
                K
                <HBox.margin>
                    <Insets top="1.0"/>
                </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <StackPane>
                <ImageView preserveRatio="true" fitHeight="20" styleClass="team-logo-stack-pane">
                    <image>
                        <Image url="@../../img/teams/ARI-Logo-Transparent.png"/>
                    </image>
                    <HBox.margin>
                        <Insets right="5.0"/>
                    </HBox.margin>
                </ImageView>
            </StackPane>
            <Label styleClass="team-label">
                ARI
            </Label>
        </HBox>

        <HBox>
            <Label>
                Blake Countess
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Label>
            <Label styleClass="position-label">
                RS
                <HBox.margin>
                    <Insets top="1.0"/>
                </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>

            <Label styleClass="team-label">
                LAR
            </Label>
            <ImageView preserveRatio="true" fitHeight="20">
                <image>
                    <Image url="@../../img/teams/LAR-Logo.png"/>
                </image>
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </ImageView>
        </HBox>

        <HBox>
            <Label>
                Reggie Morris
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Label>
            <Label styleClass="position-label">
                OLB
                <HBox.margin>
                    <Insets top="1.0"/>
                </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>

            <Label styleClass="team-label">
                CLE
            </Label>
            <ImageView preserveRatio="true" fitHeight="20">
                <image>
                    <Image url="@../../img/teams/CLE-Logo.png"/>
                </image>
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </ImageView>
        </HBox>


        <VBox.margin>
            <Insets left="$leftMargin"/>
        </VBox.margin>
    </JFXListView>

    <stylesheets>
        <URL value="@../../css/UserBallot.css"/>
    </stylesheets>
</VBox>
