<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXSlider?>
<?import com.jfoenix.controls.JFXComboBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lamonzo.pbb.controller.UserBallotController"
      prefWidth="400" maxWidth="400"
      prefHeight="750" maxHeight="750">

    <!-- CONSTANTS -->
    <fx:define>
        <Double fx:id="leftMargin" fx:value="30.0"/>
    </fx:define>

    <!-- SECTION HEADER -->
    <HBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Label styleClass="section-heading">
            YOUR BALLOT
            <HBox.margin>
                <Insets top="20.0" bottom="10.0" left="$leftMargin"/>
            </HBox.margin>
        </Label>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- LIST VIEW -->
    <JFXListView fx:id="userBallotListView" VBox.vgrow="ALWAYS">
        <!-- SPACING THE LIST VIEW FROM THE SIDE OF THE APPLICATION -->
        <VBox.margin>
            <Insets left="$leftMargin"/>
        </VBox.margin>
    </JFXListView>

    <HBox prefHeight="50" minHeight="50" maxHeight="50" alignment="CENTER_LEFT">
        <JFXButton fx:id="submitButton" styleClass="submit-btn">

            Submit Ballot
        </JFXButton>
        <Region HBox.hgrow="ALWAYS"/>
        <!--<JFXSlider blockIncrement="1.0" cache="true" majorTickUnit="1.0" max="4.0" min="1.0" minorTickCount="1" showTickMarks="true" showTickLabels="true" snapToTicks="true" value="2.0"></JFXSlider>-->
        <JFXComboBox></JFXComboBox>

        <VBox.margin>
            <Insets left="$leftMargin"/>
        </VBox.margin>
    </HBox>

    <stylesheets>
        <URL value="@../../css/UserBallot.css"/>
    </stylesheets>
</VBox>
